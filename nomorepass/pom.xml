    <groupId>com.nomorepass</groupId>
    <artifactId>nomorepass</artifactId>
    <version>1.1</version>
    <packaging>jar</packaging>

    <name>2 - nomorepass - Jar main para la APP de escritorio</name>
    <description>La aplicaci√≥n de escritorio de NoMorePass.</description>
    
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>
   
    <build>    
        <plugins>          
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>com.nomorepass.gui.Main</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
   
    <dependencies>
        <dependency>
            <groupId>org.jdesktop</groupId>
            <artifactId>beansbinding</artifactId>
            <version>1.2.1</version>
        </dependency>
        <dependency>
            <groupId>com.nomorepass</groupId>
            <artifactId>NoMorePassLib</artifactId>
