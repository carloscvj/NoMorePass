<installation version="5.0">
    <info>
        <appname>nomorepass</appname>
        <appversion>1.3-dkt</appversion>
        <url>http://www.nomorepass.com</url>
        <authors>
            <author name="becario" email="becario@chuidiang.com"/>
        </authors>		
    </info>

    <guiprefs resizable="yes" width="800" height="600"/>

    <locale>
        <langpack iso3="spa"/>
    </locale>
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    <packs>
        <pack name="ejecutables" required="yes">
            <description>El ejecutable y sus ficheros</description>
            <file src="nomorepass/target/nomorepass-1.3-dkt.jar" targetdir="$INSTALL_PATH/bin"/>
            <!--<file src="nomorepass/src/main/java/resources/NoMorePass.properties" targetdir="$INSTALL_PATH/.config/nomorepass"/>-->
        </pack>
        
        <!--
        <pack name="documentacion" required="no">
            <description>La documentacion</description>
            <file src="nomorepass/README.md" targetdir="$INSTALL_PATH/doc"/>
        </pack>
        -->
    </packs>    
</installation>
